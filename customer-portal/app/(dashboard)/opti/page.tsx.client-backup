                            // Get all unique materials and assign colors
                            const uniqueMaterials = [...new Set(addedPanels.map(p => p.t√°bl√°sAnyag))]
                            const materialIndex = uniqueMaterials.indexOf(panel.t√°bl√°sAnyag)
                            const colors = [
                              'rgba(0, 123, 108, 0.05)',    // Green
                              'rgba(25, 118, 210, 0.05)',   // Blue  
                              'rgba(156, 39, 176, 0.05)',   // Purple
                              'rgba(255, 152, 0, 0.05)',    // Orange
                              'rgba(244, 67, 54, 0.05)',    // Red
                              'rgba(76, 175, 80, 0.05)',    // Light Green
                              'rgba(63, 81, 181, 0.05)',    // Indigo
                              'rgba(255, 193, 7, 0.05)'     // Yellow
                            ]
                            return colors[materialIndex % colors.length]
                          })(),
                          '&:hover': { backgroundColor: 'rgba(0, 0, 0, 0.04)' }
                        }}
                      >
                      <TableCell>{panel.t√°bl√°sAnyag}</TableCell>
                      <TableCell>{panel.hossz√∫s√°g} mm</TableCell>
                      <TableCell>{panel.sz√©less√©g} mm</TableCell>
                      <TableCell>{panel.darab}</TableCell>
                      <TableCell>{panel.jel√∂l√©s}</TableCell>
                      <TableCell align="center">
                        <Chip 
                          label={panel.√©lz√°r√°sA ? getEdgeMaterialNameById(panel.√©lz√°r√°sA) : 'Nincs'} 
                          size="small" 
                          color={panel.√©lz√°r√°sA ? 'primary' : 'default'}
                          variant={panel.√©lz√°r√°sA ? 'filled' : 'outlined'}
                        />
                      </TableCell>
                      <TableCell align="center">
                        <Chip 
                          label={panel.√©lz√°r√°sC ? getEdgeMaterialNameById(panel.√©lz√°r√°sC) : 'Nincs'} 
                          size="small" 
                          color={panel.√©lz√°r√°sC ? 'primary' : 'default'}
                          variant={panel.√©lz√°r√°sC ? 'filled' : 'outlined'}
                        />
                      </TableCell>
                      <TableCell align="center">
                        <Chip 
                          label={panel.√©lz√°r√°sD ? getEdgeMaterialNameById(panel.√©lz√°r√°sD) : 'Nincs'} 
                          size="small" 
                          color={panel.√©lz√°r√°sD ? 'primary' : 'default'}
                          variant={panel.√©lz√°r√°sD ? 'filled' : 'outlined'}
