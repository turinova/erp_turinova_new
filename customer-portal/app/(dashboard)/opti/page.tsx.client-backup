                    }}
                    onKeyPress={handleKeyPress}
                    inputProps={{ min: 1, step: 1 }}
                    error={validationErrors.darab}
                    helperText={validationErrors.darab ? 'Darab megad√°sa k√∂telez≈ë √©s nagyobb kell legyen 0-n√°l' : ''}
                  />
                </Grid>
                <Grid item xs={12} sm={6} md={3}>
                  <TextField
                    fullWidth
                    size="small"
                    label="Jel√∂l√©s"
                    value={panelForm.jel√∂l√©s}
                    onChange={(e) => setPanelForm({...panelForm, jel√∂l√©s: e.target.value})}
                    onKeyPress={handleKeyPress}
                    inputProps={{ maxLength: 50 }}
