                  />
                </Grid>
                <Grid item xs={12} sm={6} md={3}>
                  <TextField
                    fullWidth
                    size="small"
                    label="Keresztir√°ny (mm)"
                    type="number"
                    required
                    value={panelForm.sz√©less√©g}
                    onChange={(e) => {
                      setPanelForm({...panelForm, sz√©less√©g: e.target.value})
                      clearValidationError('sz√©less√©g')
                    }}
                    onKeyPress={handleKeyPress}
                    inputProps={{ min: 0, step: 0.1 }}
                    error={validationErrors.sz√©less√©g}
                    helperText={validationErrors.sz√©less√©g ? 'Sz√©less√©g megad√°sa k√∂telez≈ë √©s nagyobb kell legyen 0-n√°l' : ''}
                  />
                </Grid>
                <Grid item xs={12} sm={6} md={3}>
                  <TextField
                    fullWidth
                    size="small"
                    label="Darab"
                    type="number"
