                          size="small" 
                          color={panel.√©lz√°r√°sB ? 'primary' : 'default'}
                          variant={panel.√©lz√°r√°sB ? 'filled' : 'outlined'}
                        />
                      </TableCell>
                      <TableCell onClick={(e) => e.stopPropagation()}>
