      const response = await fetch(phpServiceUrl, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(request)
        })

        
        if (!response.ok) {
          const errorText = await response.text()
          throw new Error(`Optimization failed: ${response.statusText}`)
        }

